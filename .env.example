# Core paths
DATABASE_PATH=var/data/abr.sqlite
DOWNLOADS_DIR=var/downloads
LIBRARY_ROOT=var/library

# Service metadata
SERVICE_NAME=abr
SERVICE_VERSION=0.1.0
DEPLOYMENT_ID=
REGION=

# Audible API (OAuth optional; leave blank to use public endpoints)
AUDIBLE_CLIENT_ID=
AUDIBLE_CLIENT_SECRET=
AUDIBLE_MARKETPLACE=us
AUDIBLE_LOCALE=en-US
AUDIBLE_REGION=us
AUDIBLE_API_BASE_URL=https://api.audible.com
AUDIBLE_TOKEN_URL=https://api.audible.com/1.0/oauth2/token

# Scheduler + network tuning
NEWZNAB_REQUEST_TIMEOUT_MS=10000
JOB_CONCURRENCY=3
SEARCH_INTERVAL_MINUTES=60
DOWNLOAD_POLL_INTERVAL_SECONDS=180

# Wide-event logging
WIDE_LOG_SAMPLE_RATE=0.05
WIDE_LOG_SLOW_REQUEST_MS=2000
